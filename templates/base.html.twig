<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
         <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Snowtricks - {% block title %}Bienvenue{% endblock %}</title>
        {% block stylesheets %}{{ encore_entry_link_tags('css/app') }}{% endblock %}
    </head>
    <body>
        {% include 'shared/header.html.twig' %}
        {% for label, messages in app.flashes %}
            <div class="{{ label }}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        {% include 'shared/footer.html.twig' %}
        {% block javascripts %}{{ encore_entry_script_tags('js/app') }}{% endblock %}
    </body>
</html>
