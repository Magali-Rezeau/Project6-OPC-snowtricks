{% extends 'base.html.twig' %}

{% block title %}Demande de modification du mot de passe{% endblock %}
{% form_theme form 'security/_collection.html.twig' %}
{% block body %}
	<section class="default">
		<div class="default-title">
			<h2>Email requise pour modifier votre mot de passe</h2>
		</div>
		<div class="default-form">
			{{ form_start(form)}}
			{{ form_row(form.email)}}
			<input type="submit" class="btn" value="Envoyer">
			{{ form_end(form)}}
		</div>
	</section>
{% endblock %}
